{{! Partial: Widget - Subscribe }}

{{#if @labs.members}}
    {{^if @member}}
        <section class="widget widget-subscribe">
            <h3 class="widget-subscribe__header">{{t "Subscribe to EckoThemes"}}</h3>
            <p class="widget-subscribe__description">{{t "Subscribe to {blogtitle} and receive access to exclusive posts and content updates. We don't spam and your email won't be shared with third-parties." blogtitle=@site.title}}</p>
            <form class="widget-subscribe__form" data-members-form="signup">
                <label class="widget-subscribe__label" for="email">
                    <span class="widget-subscribe__key">{{t "Email Address"}}</span>
                    <input class="widget-subscribe__input" name="email" type="email" placeholder="{{t "Type your email..."}}" required="true" data-members-email />
                </label>
                <button class="widget-subscribe__button button button--narrow button--color-transparent" type="submit" aria-label="{{t "Subscribe"}}">
                    {{> "svg-icon" icon="send" style="stroke" class="button__svg-icon"}}
                </button>
                <p class="widget-subscribe__message widget-subscribe__message--success"><span class="widget-subscribe__primary">{{t "Thanks for subscribing!"}}</span> {{t "Check your inbox to confirm your subscription."}}</p>
                <p class="widget-subscribe__message widget-subscribe__message--error"><span class="widget-subscribe__primary">{{t "Please enter a valid email address!"}}</span></p>
            </form>
        </section>
    {{/if}}
{{/if}}
